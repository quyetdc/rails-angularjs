<div class="auth-title"> Sign up </div>

<div id="error-message" ng-show="regCtrl.error_message">{{regCtrl.error_message}}</div>

<div id="auth-left-panel" class="col-md-6 col-xs-6">
  <div class="sign-up">
    <form name="signupForm" ng-submit="regCtrl.createUser(signupForm.$valid)" novalidate>

      <fieldset class="form-group">
        <label>Email</label><br />
        <input type="email" name="signUpEmail" ng-model="regCtrl.user_params.email" placeholder="Enter your email" class="text-input" required/>
        <span style="color:firebrick" ng-show="signupForm.signUpEmail.$error.required && isSubmitted"><br/> Email is required.</span>
        <span style="color:firebrick" ng-show="signupForm.signUpEmail.$error.email && isSubmitted"><br/> Email is not valid.</span>
      </fieldset>

      <input name="authenticity_token" type="hidden" ng-model="regCtrl.authenticity_token" value="<%= form_authenticity_token %>"/>

      <fieldset class="form-group">
        <label style="margin-top: 20px;">Password</label><br />
        <input type="password" name="password" ng-model="regCtrl.user_params.password" placeholder="Enter your password" class="text-input" required/>
        <span style="color:firebrick" ng-show="signupForm.password.$error.required && isSubmitted"><br/> Password is required.</span>
      </fieldset>

      <fieldset class="form-group">
        <label style="margin-top: 20px;">Password Confirmation</label><br />
        <input type="password" name="passwordConfirmation" ng-model="regCtrl.user_params.password_confirmation" placeholder="Enter your password again" class="text-input" required/>
        <span style="color:firebrick" ng-show="signupForm.passwordConfirmation.$error.required && isSubmitted"><br/> Password confirmation is required.</span>
      </fieldset>

      <fieldset class="form-group">
        <input type="submit" class="btn btn-success btn-auth" id="btn-sign-up" value="Sign up" ng-click='isSubmitted = true' />
      </fieldset>
    </form>
  </div>
</div>

<div id="auth-right-panel" class="col-md-5 col-xs-5" style="margin-top: 60px">
  Already have your account?
  <br />
  <div style="margin-top: 20px;"><a href ng-click="regCtrl.selectScreen('sign_in')"> Sign in now >> </a></div>
</div>